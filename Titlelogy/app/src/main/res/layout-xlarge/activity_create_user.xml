<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar_createuser"
            layout="@layout/toolbar_custom"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_createuseremail"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_createuseremail"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textEmailAddress"
                    android:hint="@string/hint_email" />


            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_createuseraltemail"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/input_createuseraltemail"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_alternateemail" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_createuserfname"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_createuserfname"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_firstname" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_createuserlname"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_createuserlname"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_lastname" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_createuserpassword"
                app:passwordToggleEnabled="true"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_createuserpassword"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textPassword"
                    android:hint="@string/hint_password" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                app:passwordToggleEnabled="true"
                android:id="@+id/input_layout_createuserconpassword"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText

                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/input_createuserconpassword"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textPassword"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_conpass" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <Button
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="100dp"
                android:theme="@style/MyButton"
                android:id="@+id/button_createusersubmit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="30sp"/>
            <Button
                android:text="Cancel"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:theme="@style/MyButton"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:id="@+id/button_createusercancel"
                android:textSize="30sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
