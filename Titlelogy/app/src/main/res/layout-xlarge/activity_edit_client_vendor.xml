<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_editclientvendor"
            layout="@layout/toolbar_custom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_clientcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:id="@+id/input_clientcode"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_subclient_code"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="25sp" />


            </android.support.design.widget.TextInputLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/button_updatesubclientvendor"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="100dp"
                android:theme="@style/MyButton"
                android:gravity="center"
                android:text="update"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
