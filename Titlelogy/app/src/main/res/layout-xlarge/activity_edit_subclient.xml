<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_editsubclient"
            layout="@layout/toolbar_custom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_updatename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:id="@+id/input_updatename"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_custname"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="25sp" />


            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="State *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/stateupdate_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                android:theme="@style/Spinner"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:text="County *"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/countyupdate_spinner"
                android:layout_width="fill_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_height="50dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_updatecity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:id="@+id/input_updatecity"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_city"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="25sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_updatezip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:id="@+id/input_updatezip"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_zip"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_updateaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:id="@+id/input_updateaddress"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_address"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_updateemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:id="@+id/input_updateemail"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_subemail"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_updatealtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText

                    android:id="@+id/input_updatealtemail"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_subaltemail"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/button_updatesubclient"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="100dp"
                android:theme="@style/MyButton"
                android:gravity="center"
                android:text="update"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
