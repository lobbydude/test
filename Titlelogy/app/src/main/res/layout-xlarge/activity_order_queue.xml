<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar_orderactivity"
            layout="@layout/toolbar_custom"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Customer Name *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/acustomer_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_aordernumber"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/ainput_ordernumber"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_ordernum" />


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:id="@+id/input_layout_aorderdate"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/ainput_date"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="date"
                    android:backgroundTint="#C9C9C9"
                    android:focusable="false"
                    android:hint="@string/hint_orderdate" />




            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Product Type *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/aproduct_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="State *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/astate_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="County *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/acounty_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ainput_layout_city"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:id="@+id/ainput_city"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_city"
                    android:textSize="25sp"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ainput_layout_zip"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/ainput_zip"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:hint="@string/hint_zip" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ainput_layout_address"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/ainput_address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_address" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ainput_layout_borrowername"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/ainput_borrowername"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:hint="@string/hint_borrowername" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/ainput_layout_apn"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText

                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/ainput_apn"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_apn" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Order Task *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/aordertask_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="Status *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/astatus_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Order Priority *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/aorderpriority_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="County Type *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/acountytype_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <Button
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="100dp"
                android:theme="@style/MyButton"
                android:gravity="center"
                android:id="@+id/abutton_ordersubmit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="30sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>
