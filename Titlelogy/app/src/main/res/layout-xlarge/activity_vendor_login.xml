<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_login_vendor"
        layout="@layout/vendor_toolbar_custom"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_titleogy"
        android:layout_marginTop="200dp"
        android:id="@+id/imageView_vendor" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_vendor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:id="@+id/input_layout_email_vendor"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:hintTextAppearance="@style/TextLabel"
        app:errorTextAppearance="@style/error">


        <EditText
            android:backgroundTint="#C9C9C9"
            android:textColor="#000000"
            android:id="@+id/input_email_vendor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textEmailAddress"
            android:hint="Email *"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:textSize="25sp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_email_vendor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/input_layout_password_vendor"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:passwordToggleEnabled="true"
        app:hintTextAppearance="@style/TextLabel"
        app:errorTextAppearance="@style/error">

        <EditText
            android:backgroundTint="#C9C9C9"
            android:id="@+id/input_password_vendor"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textPassword"
            android:hint="Password *"
            android:drawableStart="@drawable/ic_pass"
            android:drawablePadding="7dp"
            android:textSize="25sp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_loginscreen_vendor"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:theme="@style/MyButton"
        android:text="@string/btn_login"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/input_layout_password_vendor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</LinearLayout>