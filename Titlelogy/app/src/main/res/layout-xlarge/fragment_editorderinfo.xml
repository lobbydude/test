<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Customer Name *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/customer_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_editordernumber"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_editordernumber"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_ordernum" />


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:id="@+id/input_layout_editorderdate"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/input_editdate"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="date"
                    android:backgroundTint="#C9C9C9"
                    android:focusable="false"
                    android:hint="@string/hint_orderdate" />




            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:text="Product Type *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/product_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="State *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/state_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="County *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/county_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_editcity"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/input_editcity"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_city" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_editzip"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error"
                >

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_editzip"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:hint="@string/hint_zip" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_editaddress"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_editaddress"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_address" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/input_layout_editborrowername"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/input_editborrowername"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_borrowername" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/input_layout_editapn"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText

                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/input_editapn"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_apn"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:text="Order Task *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/ordertask_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Status *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/status_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="Order Priority *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/orderpriority_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="County Type *"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"
                android:id="@+id/textView" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/countytype_editspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/faborderqueuelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_upload"
                app:backgroundTint="#205DA9"
                app:fabSize="normal"
                app:rippleColor="#80D8FF"
                android:src="@mipmap/ic_uploadfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:pressedTranslationZ="6dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <Button
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="100dp"
                android:theme="@style/MyButton"
                android:gravity="center"
                android:id="@+id/button_editordersubmit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="30sp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
