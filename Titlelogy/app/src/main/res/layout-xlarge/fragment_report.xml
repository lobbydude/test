<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myradiogroup"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/pendingorder"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:text="PendingOrders"
                android:checked="true"
                android:textSize="25sp"
                />

            <RadioButton
                android:id="@+id/completedorder"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="CompletedOrder"
                android:textSize="25sp"
                />

            <RadioButton
                android:id="@+id/allorder"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="AllOrders"
                android:textSize="25sp"
                />


        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:id="@+id/input_layout_frmdate"
            app:hintTextAppearance="@style/TextLabel"
            app:errorTextAppearance="@style/error">


            <EditText
                android:textColor="#000000"
                android:textSize="25sp"
                android:id="@+id/frm_date"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="date"
                android:backgroundTint="#C9C9C9"
                android:focusable="false"
                android:hint="@string/hint_frmdate"
                />




        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:id="@+id/input_layout_todate"
            app:hintTextAppearance="@style/TextLabel"
            app:errorTextAppearance="@style/error">


            <EditText
                android:textColor="#000000"
                android:textSize="25sp"
                android:id="@+id/to_date"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="date"
                android:backgroundTint="#C9C9C9"
                android:focusable="false"
                android:hint="@string/hint_todate" />




        </android.support.design.widget.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/submitreport"
            android:theme="@style/MyButton"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_height="100dp"
            android:text="Submit"
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>