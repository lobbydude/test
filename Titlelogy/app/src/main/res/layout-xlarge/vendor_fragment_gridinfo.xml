<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Customer Name *"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_customer_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/vendor_input_layout_gridordernumber"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/vendor_input_gridordernumber"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_ordernum" />


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:id="@+id/vendor_input_layout_gridorderdate"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">


                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/vendor_input_griddate"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="date"
                    android:backgroundTint="#C9C9C9"
                    android:focusable="false"
                    android:hint="@string/hint_orderdate" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Product Type *"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_product_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="State *"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_state_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="County *"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_county_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/vendor_input_layout_gridcity"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/vendor_input_gridcity"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_city" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/vendor_input_layout_gridzip"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/vendor_input_gridzip"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:hint="@string/hint_zip" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/vendor_input_layout_gridaddress"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/vendor_input_gridaddress"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_address" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/vendor_input_layout_gridborrowername"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:backgroundTint="#C9C9C9"
                    android:id="@+id/vendor_input_gridborrowername"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="text"
                    android:hint="@string/hint_borrowername" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/vendor_input_layout_gridapn"
                app:hintTextAppearance="@style/TextLabel"
                app:errorTextAppearance="@style/error">

                <EditText

                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/vendor_input_gridapn"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:backgroundTint="#C9C9C9"
                    android:hint="@string/hint_apn" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dip"
                android:text="Order Task *"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_ordertask_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="Status"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_status_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="Order Priority *"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_orderpriority_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:text="County Type"
                android:textSize="25sp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/vendor_countytype_gridspinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:backgroundTint="#C9C9C9"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/Spinner"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <Button
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="100dp"
                android:theme="@style/MyButton"
                android:gravity="center"
                android:id="@+id/vendor_button_gridsubmit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="30sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
