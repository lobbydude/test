<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"

        android:id="@+id/card_vendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:text="Vendor Name"
                    android:id="@+id/text_vendorname"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="Albert"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:id="@+id/vendorname"
                    android:textSize="25sp"
                    android:layout_height="40dp" />
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="Email"
                    android:id="@+id/text_vendoremail"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="abc@gmail.com"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:id="@+id/vendoremail"
                    android:textSize="25sp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="State"
                    android:id="@+id/text_state"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="abc@gmail.com"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:id="@+id/vstate"
                    android:textSize="25sp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="County"
                    android:id="@+id/text_county"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="abc@gmail.com"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:id="@+id/vcounty"
                    android:textSize="25sp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:text="Phone No"
                    android:id="@+id/text_phoneno"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="abc@gmail.com"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:id="@+id/vphoneno"
                    android:textSize="25sp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
