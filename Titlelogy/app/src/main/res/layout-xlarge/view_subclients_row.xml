<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/card_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:text="Client Name"
                    android:id="@+id/text_clientname"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="NATIONAL LINK"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:id="@+id/clientnamevendor"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="SubProcess Name"
                    android:id="@+id/text_subprocess_name"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="NATIONAL LINK"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/subprocess_name_vendor"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="SubProcess Code"
                    android:id="@+id/text_subprocess_code"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="NL"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/subprocess_code_vendor"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="State"
                    android:id="@+id/text_state"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="ALABAMA"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/state_vendor"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="County"
                    android:id="@+id/text_county"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="BALDWIN"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/county_vendor"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:text="Address"
                    android:id="@+id/text_address"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="SFASFASFAF"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/address_vendor"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:text="Invoice Contact Name"
                    android:id="@+id/text_invoice_contact_name"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"  />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="SAFASFASFASF"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/invoice_contact_name_vendor"
                    android:layout_height="50dp"
                    android:textSize="25sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2sp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:paddingTop="4dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/edit_fl"
                    android:id="@+id/imageView_subedit_vendor"
                    android:tint="@color/icon_edit"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
