<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_login_vendor"
        layout="@layout/vendor_toolbar_custom"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_titleogy"
        android:layout_marginTop="35dp"
        android:id="@+id/imageView_vendor"

        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_vendor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/input_layout_email_vendor"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">


        <EditText
            android:backgroundTint="#C9C9C9"
            android:textColor="#000000"
            android:id="@+id/input_email_vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email *"
            android:text="ventest@drnds.com"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="8dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_email_vendor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/input_layout_password_vendor"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:passwordToggleEnabled="true">

        <EditText
            android:backgroundTint="#C9C9C9"
            android:id="@+id/input_password_vendor"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password *"
            android:text="123"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="7dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button android:id="@+id/btn_loginscreen_vendor"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:theme="@style/MyButton"
        android:text="@string/btn_login"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="47dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/input_layout_password_vendor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</LinearLayout>