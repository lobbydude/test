<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">
    <android.support.v7.widget.CardView
        android:id="@+id/card_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/white"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:text="Company Name"
                    android:id="@+id/text_companyname"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="NATIONAL LINK"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:id="@+id/companyname_client"
                    android:layout_height="match_parent" />
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="State"
                    android:id="@+id/text_state"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="OREGON"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/statename_client"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="County"
                    android:id="@+id/text_county"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="CLATSOP"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/countyname_client"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:text="Client_Code"
                    android:id="@+id/text_client_code"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:textColor="#676767"
                    android:text="DBTS"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:id="@+id/clientcode_client"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/edit_fl"
                    android:id="@+id/client_vedor_edit"
                    android:tint="@color/icon_edit"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>